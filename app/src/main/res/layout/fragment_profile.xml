<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <TextView
        android:id="@+id/dashboardName"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/platypi"
        android:text="User Profile Update"
        android:textColor="#33107A"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userimg"
        android:layout_width="118dp"
        android:layout_height="105dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/iconduck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboardName"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:layout_marginTop="20dp"
        android:hint="Your Name"
        android:textColorHint="@color/black"
        android:padding="13dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/menu_person"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userimg"
        android:elevation="3dp"
        app:layout_constraintWidth_percent="0.8"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_email"
        android:layout_marginTop="10dp"
        android:hint="Email Address"
        android:textColorHint="@color/black"
        android:padding="13dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/baseline_contact_mail_24"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        android:elevation="3dp"
        app:layout_constraintWidth_percent="0.8"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_number"
        android:layout_marginTop="10dp"
        android:hint="Phone Number"
        android:textColorHint="@color/black"
        android:padding="13dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/baseline_contact_phone_24"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        android:elevation="3dp"
        app:layout_constraintWidth_percent="0.8"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_address"
        android:layout_marginTop="10dp"
        android:hint="Address"
        android:textColorHint="@color/black"
        android:padding="13dp"
        android:background="@drawable/edittext_bg"
        android:drawableLeft="@drawable/ic_menuhome"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_number"
        android:elevation="3dp"
        app:layout_constraintWidth_percent="0.8"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="Update"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_address"
        app:layout_constraintVertical_bias="0.771" />

</androidx.constraintlayout.widget.ConstraintLayout>
